{
  "name": "koali",
  "version": "0.1.2",
  "description": "An koa-based Node.js web application",
  "main": "index.js",
  "license": "MIT",
  "repository": "koalijs/koali",
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
       "/node_modules/",
       "/test.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "scripts": {
    "eslint": "eslint --format codeframe *.js \"{lib,test}/**/*.js\"",
    "prettier": "prettier --write *.js \"{lib,test}/**/*.js\"",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test-travis": "npm run eslint && jest --coverage --collectCoverageFrom=lib/**/*.js",
    "test": "npm run eslint && jest --passWithNoTests"
  },
  "devDependencies": {
    "coveralls": "^3.0.7",
    "eslint": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "knex": "^0.20.1",
    "prettier": "^1.19.0",
    "sqlite3": "^4.1.0",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@koa/multer": "^2.0.0",
    "@koa/router": "^8.0.2",
    "ajv": "^6.10.2",
    "ajv-i18n": "^3.5.0",
    "camel-case": "^3.0.0",
    "config": "^3.2.4",
    "debug": "^4.1.1",
    "extend2": "^1.0.0",
    "i18n-2": "^0.7.3",
    "is-plain-object": "^3.0.0",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-logger": "^3.2.1",
    "koa-session": "^5.12.3",
    "multer": "^1.4.2",
    "no-case": "^2.3.2",
    "objection": "^1.6.11",
    "objection-db-errors": "^1.1.1",
    "pascal-case": "^2.0.1",
    "pluralize": "^8.0.0",
    "require-all": "^3.0.0",
    "statuses": "^1.5.0"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "bracketSpacing": true,
    "semi": false
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 8
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-undef": "error"
    },
    "env": {
      "es6": true,
      "jest": true,
      "node": true
    }
  }
}
