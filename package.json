{
  "name": "koala",
  "version": "0.1.0",
  "description": "An koa-based Node.js web application",
  "main": "index.js",
  "license": "MIT",
  "repository": "koalijs/koali",
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "scripts": {
    "eslint": "eslint --format codeframe *.js \"{lib,test}/**/*.{js,ts}\"",
    "prettier": "prettier --write *.js \"{lib,test}/**/*.{js,ts}\"",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test-travis": "npm run eslint && jest --coverage --collectCoverageFrom=lib/**/*.js",
    "test": "npm run eslint && jest --passWithNoTests"
  },
  "devDependencies": {
    "coveralls": "^3.0.7",
    "eslint": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "prettier": "^1.19.0",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@koa/multer": "^2.0.0",
    "@koa/router": "^8.0.2",
    "ajv": "^6.10.2",
    "camelcase": "^5.3.1",
    "debug": "^4.1.1",
    "decamelize": "^3.2.0",
    "extend2": "^1.0.0",
    "i18n-2": "^0.7.3",
    "is-plain-object": "^3.0.0",
    "knex": "^0.20.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-logger": "^3.2.1",
    "koa-session": "^5.12.3",
    "multer": "^1.4.2",
    "objection": "^1.6.11",
    "objection-db-errors": "^1.1.1",
    "pluralize": "^8.0.0",
    "require-all": "^3.0.0",
    "statuses": "^1.5.0"
  }
}
